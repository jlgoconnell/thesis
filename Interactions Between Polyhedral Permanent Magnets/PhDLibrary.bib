}

@Article{Allag2009,
  author   = {Allag, Hicham and Yonnet, Jean-Paul},
  journal  = {{IEEE Transactions on Magnetics}},
  title    = {3-{D} Analytical Calculation of the Torque and Force Exerted Between Two Cuboidal Magnets},
  year     = {2009},
  issn     = {1941-0069},
  month    = oct,
  number   = {10},
  pages    = {3969--3972},
  volume   = {45},
  abstract = {Most of the systems working by magnet interactions can be calculated by superposition of the interactions between parallelepiped elementary magnets. Each elementary magnet is submitted to a force and a torque. By 3-D fully analytical calculation, up to now, only the force components problem has been solved. It was published for the first time in 1984. Until now, the torque components have never been analytically calculated because of the angular derivation. We have solved it, so that now all the interactions (energy, three forces components, and three torque components) can be expressed by analytical formulations. The only hypothesis is that the magnetizations J and J ' are supposed to be rigid and uniform in each magnet. The analytical calculation is made by replacing magnetizations by distributions of magnetic charges on the magnet poles. The torque is calculated for rotational movement of the second magnet around its center. The three components of the torque are written with functions based on logarithm and arc-tangent. The results have been verified and validated by comparison with finite-element calculation. Analytical calculation owns many advantages in comparison with other calculation methods. The 3-D analytical expressions are difficult to obtain, but the expressions of energy, force, and torque are very simple to use. For example, the analytical expression can be included in optimization software allowing to directly obtaining the shape optimization by a fast way.},
  doi      = {10.1109/TMAG.2009.2025047},
  file     = {:Allag2009 - 3 D Analytical Calculation of the Torque and Force Exerted between Two Cuboidal Magnets.pdf:PDF},
  keywords = {Magnetic analysis, Torque, Shape, Couplings, Finite element methods, Permanent magnets, Calculus, Mathematical model, Analytical calculation, force, interaction energy, permanent magnet, torque},
}

