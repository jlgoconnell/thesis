  doi      = {10.1016/j.jmmm.2004.03.052},
  file     = {:Lee2004 - Optimal Design of a Double Sided Linear Motor with a Multi Segmented Trapezoidal Magnet Array for a High Precision Positioning System.pdf:PDF},
  keywords = {Multi-segmented trapezoidal magnet array, Linear motor, Magnetic field, Optimal design},
  language = {en},
  url      = {https://www.sciencedirect.com/science/article/pii/S0304885304005827},
  urldate  = {2021-05-04},
}

